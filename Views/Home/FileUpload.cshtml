@{
}
<div class="row">
    <div class="col-xs-12 offset-mg-3 col-md-6 offset-lg-4 col-lg-4">
        <form enctype="multipart/form-data" method="post">
            <div class="text-center">
                <h5 >Upload files of any type</h5>
            </div>
            <div class="form-group my-3">
                <input name="files" type="file" class="form-control">
            </div>
            <div class="form-group">
                <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload" class="form-control " style="width:100%" />
            </div>
            @if (ViewBag.success != null && ViewBag.success.Length > 1)
            {
                <div class="text-success text-center p-3">
                    @ViewBag.success
                </div>
            }
            @if (ViewBag.error != null && ViewBag.error.Length > 1)
            {
                <div class="text-danger text-center p-3">
                    @ViewBag.error
                </div>
            }
        </form>
    </div>
</div>
